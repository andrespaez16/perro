<style>
.container{
 margin-top:200px;
 margin-left:80px;
}
body{
background: #1782ed;

}

h1{
font-family:'Fredoka One', cursive;
color:white;
font-size: 70px;

}
h2{
font-family:'Fredoka One', cursive;
color:white;
font-size: 40px;

}

.btn-dark{
 margin-top:5px;

}
</style>



<div class="container">
<div class="row">
  <div class="col-md-6">
     <h1><img src="https://image.flaticon.com/icons/svg/194/194177.svg"width="200" height="200"> Facedog</h1>

  </div>
  <div class="col-md-6 col-md-offset-3">


    <h1>Crea tu usuario</h1>
    <%= form_for(@dogs, url: signup_path) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :image_url %>
      <%= f.text_field :image_url, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "Create my account", class: "btn btn-dark" %>
    <% end %>
  </div>
</div>
</div>
